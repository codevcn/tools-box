; ==========================================
; DIRECTORY BACKGROUND (cannot multi-select by nature)
; Right-click empty space inside a folder => pass current folder
; ==========================================
[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\SyncWithGDrive]
@="Sync with Google Drive"
"Icon"="D:\\D-Documents\\TOOLs\\gdrive-tool\\sync-with-gdrive\\app_logo.ico"
"MultiSelectModel"="Single"

[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\SyncWithGDrive\command]
@="\"D:\\Python-3-12\\python.exe\" \"D:\\D-Documents\\TOOLs\\gdrive-tool\\sync-with-gdrive\\run_app_multi.py\" \"%V\""
